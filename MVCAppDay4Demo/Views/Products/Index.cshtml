@model IEnumerable<MVCAppDay4Demo.Models.Product>
<h2> Product List </h2>
@* <button type="button" class="btn btn-primary">Create</button> *@

<a href="/Products/Create" class="btn btn-primary"> Create </a>

@* HTML Helper *@

<div class="container mt-3">

    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => Model.First().Id) </th>
                <th>@Html.DisplayNameFor(m => Model.First().Name)</th>
                <th>@Html.DisplayNameFor(m => Model.First().Description)</th>
                <th>@Html.DisplayNameFor(m => Model.First().Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

       